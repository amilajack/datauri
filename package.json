{
  "name": "datauri-build",
  "private": true,
  "version": "1.1.0",
  "scripts": {
    "test": "npm run bootstrap && npm run mocha",
    "lint": "eslint src",
    "mocha": "mocha --require test/test.js --recursive --ui bdd --timeout 3000 --reporter spec",
    "coverage-lcov": "mocha --require test/test.js --recursive --ui bdd --timeout 3000 --reporter mocha-lcov-reporter --require blanket",
    "coverage-html": "touch test/coverage/results.html && mocha --require test/test.js --recursive --ui bdd --timeout 3000 --reporter html-cov --require blanket > test/coverage/results.html",
    "coveralls": "npm run coverage-lcov | ./node_modules/coveralls/bin/coveralls.js",
    "dev-build": "gulp build && npm run mocha",
    "build": "npm run clean && gulp build",
    "start": "npm run bootstrap && echo '\nwatching files...' && onchange 'test/**/*.js' 'packages/*/src/**/*.js' -- npm run dev-build",
    "bootstrap": "npm i && lerna bootstrap && npm run build",
    "release": "NPM_DIST_TAG=next lerna publish",
    "preversion": "npm run test",
    "postversion": "npm run build",
    "clean": "rm -rf packages/*/npm-debug* && rm -rf packages/*/lib"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/heldr/datauri.git"
  },
  "engines": {
    "node": ">= 0.10"
  },
  "keywords": [
    "datauri",
    "data uri",
    "data",
    "uri",
    "data-uri",
    "optimization",
    "uri",
    "optimize",
    "inline",
    "png",
    "jpg",
    "woff",
    "base64"
  ],
  "author": "Helder Santana",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.1.2",
    "babel-core": "^6.1.2",
    "babel-polyfill": "^6.0.16",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-es2015-node4": "^1.0.1",
    "babel-preset-stage-0": "^6.1.2",
    "blanket": "~1.1.6",
    "chai": "~3.4.0",
    "chalk": "^1.1.1",
    "copy-paste": "^1.1.4",
    "coveralls": "~2.11.4",
    "eslint": "^1.9.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-newer": "^1.1.0",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.7",
    "lerna": "^1.1.1",
    "mocha": "^2.3.3",
    "mocha-lcov-reporter": "1.0.0",
    "onchange": "^2.0.0",
    "semver": "^5.0.3",
    "sinon": "~1.17.2",
    "through2": "^2.0.1"
  },
  "config": {
    "blanket": {
      "pattern": "datauri/lib/"
    }
  }
}
